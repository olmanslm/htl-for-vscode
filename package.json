{
    "name": "htl-for-vscode",
    "displayName": "Language Support for HTL (HTML Template Language) by Adobe Experience Manager (AEM)",
    "description": "Provides HTL support and different code snippets",
    "author": "Olman San Lee Montero",
    "icon": "icons/hangar_plus_AEM.png",
    "license": "MIT",
    "version": "0.0.3",
    "publisher": "olmanslm",
    "engines": {
        "vscode": "^1.46.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/olmanslm/htl-for-vscode"
    },
    "categories": [
        "Programming Languages",
        "Other",
        "Snippets"
    ],
    "activationEvents": [
        "onCommand:test.holis"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "htl",
                "aliases": [
                    "HTL",
                    "htl"
                ],
                "extensions": [
                    ".html"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "htl",
                "scopeName": "text.html.htl.aem",
                "path": "./syntaxes/htl.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "htl",
                "path": "./snippets/htl-snippets.json"
            }
        ],
        "commands": [
            {
                "command": "test.holis",
                "title": "Say Hello!"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.46.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.30.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }
}
